Shader "Hidden/Kawase"
{
	CGINCLUDE
	#include "UnityCG.cginc"

	sampler2D _MainTex;
	float4 _MainTex_TexelSize;
	float4 _BlurOffset;

	fixed4 frag_VerticalBlur (v2f_img i) : SV_Target
	{
		half4 s=0;
		half2 offset = _BlurOffset.xy;

		half2 uv1=i.uv + offset * half2(0,1) * -2.0;
		half2 uv2=i.uv + offset * half2(0,1) * -1.0;
		half2 uv3=i.uv;
		half2 uv4=i.uv + offset * half2(0,1) * 1.0;
		half2 uv5=i.uv + offset * half2(0,1) * 2.0;
		
		s += tex2D(_MainTex,uv1)*0.05;
		s += tex2D(_MainTex,uv2)*0.25;
		s += tex2D(_MainTex,uv3)*0.40;
		s += tex2D(_MainTex,uv4)*0.25;
		s += tex2D(_MainTex,uv5)*0.05;

		return s; 
	}

	fixed4 frag_HorizonalBlur (v2f_img i) : SV_Target
	{
		half4 s=0;
		half2 offset = _BlurOffset.xy;

		half2 uv1=i.uv + offset * half2(1,0) * -2.0;
		half2 uv2=i.uv + offset * half2(1,0) * -1.0;
		half2 uv3=i.uv;
		half2 uv4=i.uv + offset * half2(1,0) * 1.0;
		half2 uv5=i.uv + offset * half2(1,0) * 2.0;
		
		s += tex2D(_MainTex,uv1)*0.05;
		s += tex2D(_MainTex,uv2)*0.25;
		s += tex2D(_MainTex,uv3)*0.40;
		s += tex2D(_MainTex,uv4)*0.25;
		s += tex2D(_MainTex,uv5)*0.05;

		return s; 
	}

	ENDCG

	Properties
	{
		_MainTex ("Texture", 2D) = "white" {}
		_BlurOffset("_BlurOffset",Float)=1
	}
	SubShader
	{
		// No culling or depth
		Cull Off ZWrite Off ZTest Always

		Pass
		{
			CGPROGRAM
			#pragma vertex vert_img
			#pragma fragment frag_VerticalBlur
			ENDCG
		}
		Pass
		{
			CGPROGRAM
			#pragma vertex vert_img
			#pragma fragment frag_HorizonalBlur
			ENDCG
		}
	}
}
